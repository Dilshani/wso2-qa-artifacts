<?xml version="1.0" encoding="UTF-8"?>
<project name="module_mbtestcases" default="compile.module.mbtestcases">
  <dirname property="module.mbtestcases.basedir" file="${ant.file.module_mbtestcases}"/>
  
  <property name="module.jdk.home.mbtestcases" value="${project.jdk.home}"/>
  <property name="module.jdk.bin.mbtestcases" value="${project.jdk.bin}"/>
  <property name="module.jdk.classpath.mbtestcases" value="${project.jdk.classpath}"/>
  
  <property name="compiler.args.mbtestcases" value="-encoding UTF-8 -source 1.5 -target 1.5 ${compiler.args}"/>
  
  <property name="mbtestcases.output.dir" value="${module.mbtestcases.basedir}/target/classes"/>
  <property name="mbtestcases.testoutput.dir" value="${module.mbtestcases.basedir}/target/test-classes"/>
  
  <path id="mbtestcases.module.bootclasspath">
    <!-- Paths to be included in compilation bootclasspath -->
  </path>
  
  <path id="mbtestcases.module.production.classpath">
    <path refid="${module.jdk.classpath.mbtestcases}"/>
    <path refid="library.maven:_org.wso2.andes.wso2:andes-client:2.6.0.classpath"/>
    <path refid="library.maven:_org.apache.geronimo.specs.wso2:geronimo-jms_1.1_spec:1.1.0.wso2v2.classpath"/>
    <path refid="library.maven:_org.apache.geronimo.specs:geronimo-jms_1.1_spec:1.1.classpath"/>
    <path refid="library.maven:_log4j:log4j:1.2.13.classpath"/>
    <path refid="library.maven:_slf4j.wso2:slf4j:1.5.10.wso2v1.classpath"/>
  </path>
  
  <path id="mbtestcases.runtime.production.module.classpath">
    <pathelement location="${mbtestcases.output.dir}"/>
    <path refid="library.maven:_org.wso2.andes.wso2:andes-client:2.6.0.classpath"/>
    <path refid="library.maven:_org.apache.geronimo.specs.wso2:geronimo-jms_1.1_spec:1.1.0.wso2v2.classpath"/>
    <path refid="library.maven:_org.apache.geronimo.specs:geronimo-jms_1.1_spec:1.1.classpath"/>
    <path refid="library.maven:_log4j:log4j:1.2.13.classpath"/>
    <path refid="library.maven:_slf4j.wso2:slf4j:1.5.10.wso2v1.classpath"/>
  </path>
  
  <path id="mbtestcases.module.classpath">
    <path refid="${module.jdk.classpath.mbtestcases}"/>
    <pathelement location="${mbtestcases.output.dir}"/>
    <path refid="library.maven:_junit:junit:3.8.1.classpath"/>
    <path refid="library.maven:_org.wso2.andes.wso2:andes-client:2.6.0.classpath"/>
    <path refid="library.maven:_org.apache.geronimo.specs.wso2:geronimo-jms_1.1_spec:1.1.0.wso2v2.classpath"/>
    <path refid="library.maven:_org.apache.geronimo.specs:geronimo-jms_1.1_spec:1.1.classpath"/>
    <path refid="library.maven:_log4j:log4j:1.2.13.classpath"/>
    <path refid="library.maven:_slf4j.wso2:slf4j:1.5.10.wso2v1.classpath"/>
  </path>
  
  <path id="mbtestcases.runtime.module.classpath">
    <pathelement location="${mbtestcases.testoutput.dir}"/>
    <pathelement location="${mbtestcases.output.dir}"/>
    <path refid="library.maven:_junit:junit:3.8.1.classpath"/>
    <path refid="library.maven:_org.wso2.andes.wso2:andes-client:2.6.0.classpath"/>
    <path refid="library.maven:_org.apache.geronimo.specs.wso2:geronimo-jms_1.1_spec:1.1.0.wso2v2.classpath"/>
    <path refid="library.maven:_org.apache.geronimo.specs:geronimo-jms_1.1_spec:1.1.classpath"/>
    <path refid="library.maven:_log4j:log4j:1.2.13.classpath"/>
    <path refid="library.maven:_slf4j.wso2:slf4j:1.5.10.wso2v1.classpath"/>
  </path>
  
  
  <patternset id="excluded.from.module.mbtestcases">
    <patternset refid="ignored.files"/>
  </patternset>
  
  <patternset id="excluded.from.compilation.mbtestcases">
    <patternset refid="excluded.from.module.mbtestcases"/>
  </patternset>
  
  <path id="mbtestcases.module.sourcepath">
    <dirset dir="${module.mbtestcases.basedir}">
      <include name="src/main/java"/>
      <include name="src/main/resources"/>
    </dirset>
  </path>
  
  <path id="mbtestcases.module.test.sourcepath">
    <dirset dir="${module.mbtestcases.basedir}">
      <include name="src/test/java"/>
    </dirset>
  </path>
  
  
  <target name="compile.module.mbtestcases" depends="compile.module.mbtestcases.production,compile.module.mbtestcases.tests" description="Compile module MBTestCases"/>
  
  <target name="compile.module.mbtestcases.production" depends="register.custom.compilers" description="Compile module MBTestCases; production classes">
    <mkdir dir="${mbtestcases.output.dir}"/>
    <javac2 destdir="${mbtestcases.output.dir}" debug="${compiler.debug}" nowarn="${compiler.generate.no.warnings}" memorymaximumsize="${compiler.max.memory}" fork="true" executable="${module.jdk.bin.mbtestcases}/javac">
      <compilerarg line="${compiler.args.mbtestcases}"/>
      <bootclasspath refid="mbtestcases.module.bootclasspath"/>
      <classpath refid="mbtestcases.module.production.classpath"/>
      <src refid="mbtestcases.module.sourcepath"/>
      <patternset refid="excluded.from.compilation.mbtestcases"/>
    </javac2>
    
    <copy todir="${mbtestcases.output.dir}">
      <fileset dir="${module.mbtestcases.basedir}/src/main/java">
        <patternset refid="compiler.resources"/>
        <type type="file"/>
      </fileset>
      <fileset dir="${module.mbtestcases.basedir}/src/main/resources">
        <patternset refid="compiler.resources"/>
        <type type="file"/>
      </fileset>
    </copy>
  </target>
  
  <target name="compile.module.mbtestcases.tests" depends="register.custom.compilers,compile.module.mbtestcases.production" description="compile module MBTestCases; test classes" unless="skip.tests">
    <mkdir dir="${mbtestcases.testoutput.dir}"/>
    <javac2 destdir="${mbtestcases.testoutput.dir}" debug="${compiler.debug}" nowarn="${compiler.generate.no.warnings}" memorymaximumsize="${compiler.max.memory}" fork="true" executable="${module.jdk.bin.mbtestcases}/javac">
      <compilerarg line="${compiler.args.mbtestcases}"/>
      <bootclasspath refid="mbtestcases.module.bootclasspath"/>
      <classpath refid="mbtestcases.module.classpath"/>
      <src refid="mbtestcases.module.test.sourcepath"/>
      <patternset refid="excluded.from.compilation.mbtestcases"/>
    </javac2>
    
    <copy todir="${mbtestcases.testoutput.dir}">
      <fileset dir="${module.mbtestcases.basedir}/src/test/java">
        <patternset refid="compiler.resources"/>
        <type type="file"/>
      </fileset>
    </copy>
  </target>
  
  <target name="clean.module.mbtestcases" description="cleanup module">
    <delete dir="${mbtestcases.output.dir}"/>
    <delete dir="${mbtestcases.testoutput.dir}"/>
  </target>
</project>